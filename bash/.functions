# stop containers
function dsc {
  docker stop $(docker ps -aq)
}

# remove all stop containers
function drc {
 docker rm -f $(docker ps -aq)  
}

# remove all images or remove images based on an arg in image name
function dri {
	dcu
	if [[ $# -gt 0 ]] ; then
		for var in "$@"
			do
				docker rmi $( docker images --format "{{.Repository}}" | grep $var)
		done
	else
		docker image rm -f $(docker images -q)
	fi
}

# remove(trim) dangling images 
function dti {
	docker rmi -f $(docker images -f "dangling=true" -q)
}

function dcu {
	dsc
	printf "\n\n"
	drc
	printf "\n\n"
	dti
	printf "\n\n"
}


#watch docker ps
function wdps {
	watch -t 'docker ps --format "table {{.ID}}\t{{.Names}}\t{{.Networks}}\t{{.Status}}"'
}

function wdkps {
	watch -t docker-compose ps 2>/dev/null | tail -n +3

}

#output logs from docker-compose service

function dcl {
	printf "$1\n\n"
	docker-compose logs --no-color $1 | sed -e "s/$1[ \s]\+|\ //g"  > service-$1.logs
}

